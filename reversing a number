import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        Scanner scanner=new Scanner(System.in);
        System.out.println("enter the number:");
        int n=scanner.nextInt();
        int rem,sum=0;
        while(n!=0)
        {
            rem=n%10;
            sum=sum*10+rem;
            n=n/10;
        }
        System.out.println("reversed number="+sum);
    }
}

OUTPUT:
enter the number:
123
reversed number=321
